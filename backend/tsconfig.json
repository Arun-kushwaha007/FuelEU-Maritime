{
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist",

    // ESM + Node
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    // Node Types
    "lib": ["ES2020"],
    "types": ["node"],
    "resolveJsonModule": true,

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,

    // Build Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma"]
}