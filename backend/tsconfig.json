{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "es2019",
    "lib": ["ES2020"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma"]
}
