{
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist",

    // ESM + Node
    // "module": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    

    // Node Types
    "lib": ["ES2020"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,

    // Build Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true,
    
    // "esModuleInterop": true,
    
    // "resolveJsonModule": true,
    // "allowSyntheticDefaultImports": true
    

    
  },
  "include": ["src", "prisma"]
}